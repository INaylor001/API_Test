<h1>Listing users</h1>
 <%= link_to 'New user', new_user_path %>
<table>
  <tr>
    <th>first name</th>
    <th>Last name</th>
    <th>Email</th>
    <th>Nickname</th>
  </tr>

  <% @users.each do |user| %>
    <tr>
      <td><%= user.firstname %></td>
      <td><%= user.lastname %></td>
      <td><%= user.email %></td>
      <td><%= user.nickname %></td>
      <td><%= link_to 'Show', user_path(user) %></td>
      <td><%= link_to 'Edit', edit_user_path(user) %></td>
      <td><%= link_to 'Destroy',
                                user_path(user),
                                method: :delete,
                                data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>
